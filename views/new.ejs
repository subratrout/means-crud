    <script type="text/javascript">
    </script>
</head>
<body>


<div id="main-container">
    <h1>Add a Mongoose: </h1>

    <form action="/mongoose" method="post">
        <label>
            Mongoose Name: <input type="text" name="name"><br>
        </label>
        <label>
            Mongoose Age: <input type="number" name="age"><br>
        </label>

        <label>
            Mongoose Description: <textarea name="description"></textarea><br>
        </label>
        <label>
            Mongoose Hobbies: <input type="text" name="hobbies"><br>
        </label>

        <input class="btn" type= "submit" value="Add a Mongoose">
    </form>



    <!--<% if(typeof(errors) != 'undefined' ) { %>-->
