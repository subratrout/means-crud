    <!--<% } %>-->
    <!--<% } %>-->

    <div id="errors">
        <% if(typeof(errors) != 'undefined' ) { %>
        <h3><%= errors.name.message %></h3>
        <h3><%= errors.age.message %></h3>
        <h3><%= errors.description.message %></h3>
        <h3><%= errors.hobbies.message %></h3>
        <% } %>
    </div>

</div>

<a class="btn" href="/">Go to Mongoose Lists!</a>


</body>
</html>
