<body>


<div id="main-container">

    <div id="quotes">
        <h1>Showing All Mongooses: </h1>
        <% for(var x in mongoose){%>
        <h3>Name: <%= mongoose[x].name %></h3>
        <h3>Age: <%= mongoose[x].age  %></h3>
        <h4>Description: <%= mongoose[x].description  %></h4>
        <h4>Hobbies: <%= mongoose[x].hobbies  %></h4>
        <a href ="/mongoose/<%= mongoose[x].id%>">Show</a>
        <a href ="/mongoose/edit/<%= mongoose[x].id%>">Edit</a>
        <a href ="/mongoose/delete/<%= mongoose[x].id%>">Delete</a>
        <hr>
        <% } %>
    </div>

    <a href="/mongoose/new">Add a Mongoose</a>

</div>


